# Maintainer: Ash Logan <ash [at] heyquark [dot] com>

pkgname=wiiu-sdl2
pkgver=0.1
_gittag=e275292
pkgrel=1
pkgdesc="Library for portable access to Wii U video, audio, input"
url="https://github.com/rw-r-r-0644/sdl2-wiiu"
license=("custom")
arch=("x86_64" "i686")
depends=("devkitPPC" "ppc-libjpeg-turbo" "ppc-mpg123" "ppc-libogg" "ppc-libvorbisidec" "ppc-libpng" "ppc-freetype")
makedepends=("git")
groups=("wiiu-libs")
source=("$pkgname::git+https://github.com/rw-r-r-0644/sdl2-wiiu#tag=$_gittag")
md5sums=("SKIP")
options=("!buildflags" "!strip" "staticlibs")

_prefix="/opt/devkitpro/portlibs/wiiu"

prepare() {
    echo nothing to do
}

build() {
    cd $pkgname/SDL2-wiiu
    make -f Makefile.wiiu
    cd ../SDL2_gfx-1.0.4-wiiu
    make -f Makefile.wiiu
    cd ../SDL2_image-2.0.3-wiiu
    make -f Makefile.wiiu
    cd ../SDL2_ttf-2.0.14-wiiu
    make -f Makefile.wiiu
    cd ../SDL2_mixer-2.0.2-wiiu
    make -f Makefile.wiiu
}

package() {
    cd $pkgname/SDL2-wiiu
    make -f Makefile.wiiu install PORTLIBS=$pkgdir/$_prefix
    cd ../SDL2_gfx-1.0.4-wiiu
    make -f Makefile.wiiu install PORTLIBS=$pkgdir/$_prefix
    cd ../SDL2_image-2.0.3-wiiu
    make -f Makefile.wiiu install PORTLIBS=$pkgdir/$_prefix
    cd ../SDL2_ttf-2.0.14-wiiu
    make -f Makefile.wiiu install PORTLIBS=$pkgdir/$_prefix
    cd ../SDL2_mixer-2.0.2-wiiu
    make -f Makefile.wiiu install PORTLIBS=$pkgdir/$_prefix
}
